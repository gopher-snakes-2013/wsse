<h1><%= @restaurant.name %></h1>
  <%# this form needs remote: true %>
  <%= form_for [@restaurant, @comment], remote: true do |f| %>
  <%= f.label "Add Comment:" %>
  <%= f.text_field :content %>
  <%= f.submit "Submit" %>
<% end %>

<ul class="comments">
<% @restaurant.comments.each do |comment| %>
  <% if comment.content %>
  <li>
    <%= comment.content %>
  </li>
  <% end %>
<% end %>
</ul>
